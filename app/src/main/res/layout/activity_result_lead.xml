<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chnu.moodleleadertest.ResultLeadActivity">

    <TextView
        android:id="@+id/result_lead_l_txt"
        android:text=""
        android:textSize="@dimen/text_h1"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:layout_marginBottom="@dimen/marg_s"
        android:layout_marginTop="@dimen/marg_s"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/result_lead_e_txt"
        android:text=""
        android:textSize="@dimen/text_h1"
        android:textStyle="bold"
        android:textColor="#0000ff"
        android:layout_marginBottom="@dimen/marg_s"
        android:layout_marginTop="@dimen/marg_s"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.jjoe64.graphview.GraphView
            android:id="@+id/result_lead_graph"
            android:layout_weight="1"
            android:layout_margin="@dimen/marg_s"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_margin="@dimen/marg_s"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:text="клан"
                    android:layout_margin="@dimen/marg_s"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="адхократия"
                    android:layout_margin="@dimen/marg_s"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:text="иерархия \n(бюрократия)"
                    android:layout_margin="@dimen/marg_s"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="рынок"
                    android:layout_margin="@dimen/marg_s"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <Button
        android:id="@+id/result_lead_leader"
        android:text="@string/result_lead_leader"
        android:textSize="@dimen/text_h3"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="@dimen/marg_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/result_lead_employ"
        android:text="@string/result_lead_employ"
        android:textSize="@dimen/text_h3"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="@dimen/marg_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
